@model _06_ejercicioValidaciones.Models.clsPersona
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<body>
    @using (Html.BeginForm())
    {
        <p>Nombre: </p>
        <input name="nombre" type="text" value="@Model.nombre" />
        @Html.ValidationMessageFor(model => model.nombre)
        <br />
        <p>Apellidos: </p>@Html.TextBox("apellidos")
        <br />
        <p>Fecha de nacimiento: </p>@Html.TextBoxFor(m => m.fecha)
        <br />
        <p>Telefono: </p>@Html.TextBoxFor(m => m.telefono)
        <br />
        @Html.ValidationMessageFor(model => model.telefono)
        <p>Direccion: </p>@Html.TextBoxFor(m => m.direccion)
        @Html.ValidationMessageFor(model => model.direccion)
        <br />

        <input type="submit" />
    }
</body>

</html>